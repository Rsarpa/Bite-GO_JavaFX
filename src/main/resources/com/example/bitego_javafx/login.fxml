<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="20.0"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.bitego_javafx.Controller.LoginController"
      stylesheets="@resources/styles/login.css">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <!-- Logo o Icono
    <ImageView fx:id="logoImage" fitHeight="80" fitWidth="80" pickOnBounds="true" preserveRatio="true"
               image="@resources/images/bocata.png"/>
    -->
    <!-- Título -->
    <Label text="Bite-GO" styleClass="title-label"/>

    <!-- Campo de Correo -->
    <TextField fx:id="correoField" promptText="Correo Electrónico" styleClass="input-field"/>

    <!-- Campo de Contraseña -->
    <PasswordField fx:id="contrasenaField" promptText="Contraseña" styleClass="input-field"/>

    <!-- Botón de Iniciar Sesión -->
    <Button fx:id="loginButton" onAction="#onLoginButtonClick" text="Iniciar Sesión" styleClass="login-button"/>

    <!-- Mensaje de Error -->
    <Label fx:id="welcomeText" textFill="#d71212" styleClass="error-message"/>

</VBox>
