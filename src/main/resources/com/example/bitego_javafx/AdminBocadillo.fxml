<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" prefHeight="500" prefWidth="400" spacing="10"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.bitego_javafx.Controller.AdminBocadilloController"
      stylesheets="@resources/styles/adminalumno.css"
      styleClass="container">

    <!-- Título -->
    <Label text="Registro de Bocadillo" styleClass="title-label" />

    <GridPane hgap="5.0" vgap="10.0" styleClass="grid-pane">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label" />
        <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="text-field" />

        <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label" />
        <ComboBox fx:id="tipoBox" promptText="Seleccione Tipo" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="text-field" />

        <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="label" />
        <TextField fx:id="txtDescrip" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="text-field" />

        <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="label" />
        <TextField fx:id="txtPrecio" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="text-field" />

        <Label text="Dia Asociado - Lunes a Viernes (1-5):" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="label" />
        <ComboBox fx:id="diaBox" promptText="Seleccione Dia" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="text-field" />


        <VBox.margin>
            <Insets left="10.0" right="40.0" />
        </VBox.margin>
    </GridPane>

    <HBox alignment="CENTER" spacing="15" styleClass="button-container">
        <Button fx:id="btnGuardar" onAction="#guardarBocadillo" text="Guardar" styleClass="button-primary" />
        <Button fx:id="btnCancelar" onAction="#cerrarVentana" text="Cancelar" styleClass="button-danger" />
    </HBox>
</VBox>