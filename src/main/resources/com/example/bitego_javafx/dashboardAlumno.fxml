<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.bitego_javafx.Controller.AlumnoController"
            stylesheets="@resources/styles/dashboard_alumno.css">

   <!-- 🔷 Barra Superior -->
   <top>
      <HBox styleClass="top-bar" spacing="15">
         <Label text="BiteGO - Panel del Alumno" styleClass="title-label"/>
         <Region HBox.hgrow="ALWAYS"/>
         <Button text="Historial" styleClass="top-button"/>
         <Button text="Cerrar Sesión" styleClass="logout-button"/>
      </HBox>
   </top>

   <!-- 📌 Panel Lateral (Pedidos) -->
   <left>
      <VBox styleClass="side-pane" spacing="15">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </padding>
         <Label text="📋 Pedidos de Hoy" styleClass="section-title"/>
         <ListView fx:id="listViewPedidos" prefHeight="200"/>
         <Button text="Cancelar Pedido" styleClass="cancel-button"/>
      </VBox>
   </left>

   <!-- 🍽️ Panel Central (Selección de bocadillos) -->
   <center>
      <VBox styleClass="center-pane" spacing="20">
         <Label text="Selecciona tu bocadillo del día" styleClass="section-title"/>
         <HBox spacing="40" alignment="CENTER">
            <VBox alignment="CENTER">
               <ImageView fx:id="imgBocadilloFrio" fitWidth="180" fitHeight="180"/>
               <ToggleButton text="Bocadillo Frío" fx:id="btnFrio" styleClass="toggle-button"/>
            </VBox>
            <VBox alignment="CENTER">
               <ImageView fx:id="imgBocadilloCaliente" fitWidth="180" fitHeight="180"/>
               <ToggleButton text="Bocadillo Caliente" fx:id="btnCaliente" styleClass="toggle-button"/>
            </VBox>
         </HBox>
         <Button text="Confirmar Elección" styleClass="confirm-button"/>
      </VBox>
   </center>

</BorderPane>
