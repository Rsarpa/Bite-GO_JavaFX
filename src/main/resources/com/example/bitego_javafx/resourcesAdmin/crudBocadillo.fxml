<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bitego_javafx.Controller.CrudBocadilloController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <!--Tabla para mostrar alumnos-->
        <TableView fx:id="tblAlumnos" layoutX="44.0" layoutY="120.0" prefHeight="356.0" prefWidth="749.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" styleClass="table-column" text="ID" />
                <TableColumn fx:id="colNombre" prefWidth="150.0" styleClass="table-column" text="Nombre" />
                <TableColumn fx:id="colApellidos" prefWidth="200.0" styleClass="table-column" text="Apellidos" />
                <TableColumn fx:id="colDni" prefWidth="100.0" styleClass="table-column" text="DNI" />
                <TableColumn fx:id="colLocalidad" prefWidth="150.0" styleClass="table-column" text="Localidad" />
                <TableColumn fx:id="colEmail" prefWidth="200.0" styleClass="table-column" text="Email" />
            </columns>
        </TableView>

        <!--Barra de menú para opciones CRUD-->
        <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="838.0" styleClass="menu-bar">
            <menus>
                <Menu mnemonicParsing="false" styleClass="menu" text="Alumnos">
                    <items>
                        <MenuItem mnemonicParsing="false" styleClass="menu-item" text="Añadir" />
                        <MenuItem mnemonicParsing="false" styleClass="menu-item" text="Editar" />
                        <MenuItem mnemonicParsing="false" styleClass="menu-item" text="Borrar" />
                        <MenuItem mnemonicParsing="false" styleClass="menu-item" text="Mostrar Información" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <MenuBar layoutX="657.0" layoutY="28.0">
            <menus>
                <Menu mnemonicParsing="false" text="Bocadillos">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Alumnos">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <!--Campo de búsqueda por nombre-->
        <TextField fx:id="txtFiltroNombre" layoutX="590.0" layoutY="74.0" prefHeight="25.0" prefWidth="204.0" styleClass="text-field" />
        <Label layoutX="451.0" layoutY="80.0" styleClass="label" text="Nombre del Alumno:" />

    </children>
</AnchorPane>
