<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="490.0" prefWidth="851.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bitego_javafx.Controller.AdminController">
    <children>
        <!-- Tabla para mostrar alumnos -->
        <TableView fx:id="tblAlumnos" layoutX="46.0" layoutY="98.0" prefHeight="356.0" prefWidth="749.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="colNombre" prefWidth="150.0" text="Nombre" />
                <TableColumn fx:id="colApellidos" prefWidth="200.0" text="Apellidos" />
                <TableColumn fx:id="colDni" prefWidth="100.0" text="DNI" />
                <TableColumn fx:id="colLocalidad" prefWidth="150.0" text="Localidad" />
                <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
            </columns>
        </TableView>

        <!-- Barra de menú para opciones CRUD -->
        <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="838.0">
            <menus>
                <Menu mnemonicParsing="false" text="Alumnos">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#añadirAlumno" text="Añadir" />
                        <MenuItem mnemonicParsing="false" onAction="#editarAlumno" text="Editar" />
                        <MenuItem mnemonicParsing="false" onAction="#borrarAlumno" text="Borrar" />
                        <MenuItem mnemonicParsing="false" onAction="#mostrarInformacion" text="Mostrar Información" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <!-- Campo de búsqueda por nombre -->
        <TextField fx:id="txtFiltroNombre" layoutX="587.0" layoutY="56.0" onKeyReleased="#filtrarPorNombre" prefHeight="25.0" prefWidth="204.0" />
        <Label layoutX="468.0" layoutY="60.0" text="Nombre del Alumno:" />
    </children>
</AnchorPane>
